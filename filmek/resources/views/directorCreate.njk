{% extends "layout" %}

{% block content %}
<h2>Új rendező</h2>

{% if old('errors') %}
<div class="panel panel-danger">
  <div class="panel-heading">
    <h3 class="panel-title">Hibák</h3>
  </div>
  <div class="panel-body">
    <ul>
      {% for error in old('errors') %}
      <li>{{ error.message }}</li>
      {% endfor %}
    </ul>
  </div>
</div>
{% endif %}


<form class="form-horizontal" method="post">

  {{ csrfField }}

  <div class="form-group">
    <label for="name" class="col-lg-2 control-label">Rendező neve</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="name" name="name" placeholder="Rendező neve" value="{{old('name')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="imdb" class="col-lg-2 control-label">Imdb link</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="imdb" name="imdb" placeholder="Imdb link" value="{{old('imdb')}}">
    </div>
  </div>
  <div class="form-group">
    <label for="rottentomatoes" class="col-lg-2 control-label">Rottentomatoes link</label>
    <div class="col-lg-10">
      <input type="text" class="form-control" id="rottentomatoes" name="rottentomatoes" placeholder="Rottentomatoes link" value="{{old('rottentomatoes')}}">
    </div>
  </div>
  <div class="form-group">
    <div class="col-lg-10 col-lg-offset-2">
      <button type="reset" class="btn btn-default">Mégsem</button>
      <button type="submit" class="btn btn-primary">Küldés</button>
    </div>
  </div>
</form>

{% endblock %}